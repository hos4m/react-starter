{
  "name": "react-starter",
  "version": "1.0.0",
  "description": "React project starter",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --open --mode development",
    "build": "webpack --mode production",
    "jslint": "eslint './src/**/*.js'",
    "stylelint": "stylelint '**/*.scss'",
    "format": "prettier-eslint './src/**/*.js' --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run jslint && npm run stylelint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hos4m/react-starter.git"
  },
  "keywords": [
    "react",
    "webpack",
    "eslint",
    "stylelint",
    "babel",
    "javascript",
    "css",
    "html"
  ],
  "author": "Hossam Mourad",
  "license": "MIT",
  "homepage": "https://github.com/hos4m/react-starter#readme",
  "dependencies": {
    "core-js": "^3.4.0",
    "react": "^16.10.1",
    "react-dom": "^16.10.1",
    "regenerator-runtime": "^0.13.3"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.2.0",
    "eslint": "^6.5.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.15.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.8",
    "node-sass": "^4.13.1",
    "prettier-eslint-cli": "^5.0.0",
    "sass-bulk-import-loader": "^0.1.1",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.0",
    "stylelint": "^11.0.0",
    "stylelint-config-recommended-scss": "^4.0.0",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-declaration-strict-value": "^1.1.6",
    "stylelint-scss": "^3.11.1",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.2"
  }
}
